{
  "name": "patron-scheme-editor",
  "license": "MIT",
  "version": "0.0.12",
  "description": "Visual schemes editor",
  "type": "module",
  "main": "dist/patron.es.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "oop",
    "schemes",
    "vue",
    "mind-map"
  ],
  "exports": {
    ".": {
      "import": "./dist/patron.es.js",
      "require": "./dist/patron.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./patron-scheme-editor.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "dist-embedable"
  ],
  "scripts": {
    "build": "vite build --mode=production",
    "build:watch": "vite build --watch",
    "test": "vitest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "release": "npm run build && standard-version --no-verify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kosukhin/patron-scheme-editor.git"
  },
  "private": false,
  "peerDependencies": {
    "@fortawesome/free-solid-svg-icons": "6.x",
    "@fortawesome/vue-fontawesome": "3.x",
    "@tiptap/pm": "2.x",
    "@tiptap/starter-kit": "2.x",
    "@tiptap/vue-3": "2.x",
    "konva": "8.x",
    "vue": "3.4.x"
  },
  "dependencies": {
    "patron-oop": "^1.26.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-vue": "^5.2.0",
    "autoprefixer": "^10.4.20",
    "cz-customizable": "^7.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "postcss": "^8.4.49",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.15",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^2.1.2"
  }
}
